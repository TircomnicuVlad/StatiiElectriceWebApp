@{
}

<h1>Detalii</h1>

<div>
    <h4>Statie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Oras)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Oras)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adresa)
        </dd>
    </dl>

    <table>
        <tr>
            <th>
                Tip prize
            </th>
        </tr>
        @foreach (Prize item in Model.Prizes) {
        <tr>
            <td>@item.Tip.Id</td>
            <td>@item.Tip.Nume</td>
            <td><a asp-controller="Prize" asp-action="Delete" asp-route-id="@item.Id">Sterge Priza</a></td>
        </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a>Booking</a> |
    <a asp-controller="Prize" asp-action="AddToStation" asp-route-id="@Model.Id">Adaugare Priza</a> |
    <a asp-action="GetStatii">Back to List</a>
</div>
