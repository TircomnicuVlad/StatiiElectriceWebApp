    <div class="events">
        <ul class="wrap">
            <li class="events-group">
                <div class="top-info"><span>Monday <br /> @Model.calendars[0].Date.ToString("d")</span></div>
                <ul>
                    @{
                        var i = 0;
                        foreach (var item in Model.calendars[0].rezervari)
                        {
                            i++;
                            if (i == 5)
                            {
                                i = 1;
                            }
                                    <li class="single-event" data-start="@item.StartDate.ToString("t")"
                                    data-end="@item.EndDate.ToString("t")" data-event="event-@i">
